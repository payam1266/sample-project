            font-size: 16px;
            border-radius: 7px
        }

        .suggestSearch {
            position: absolute;
            top: 42px;
            width: 100%;
            border: 1px solid #ccc;
            border-radius: 5px;
            max-height: 170px;
            overflow-y: auto;
            display: none;
            background-color: #fff;
            z-index: 1;
            padding: 7px;
        }

        .suggestionitem {
            padding: 10px;
            cursor: pointer;
            border-radius: 7px;
            font-family: 'Poppins', sans-serif;
            font-size: 14px;
        }

            .suggestionitem:hover {
                background-color: #ccc24a;
            }

        #btnSearch {
            background-color: #ccc24a;
            color: #fff;
            padding: 7px;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
            border-radius: 50%;
            height: 40px;
            margin-left: 5px;
            text-align: center;
            align-content: start
        }

            #btnSearch:hover {
                background-color: #2196F3;
                transform: scale(1.06);
            }


    </style>
