    <style>


        .cardbody {
            opacity: 0;
        }

            .cardbody.p {
                opacity: 1;
                transition: transform 0.3s ease-in-out, opacity 0.9s ease-in-out;
            }



        .loader {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #333333;
            transition: opacity 0.75s, visibility 0.75s;
        }

        .loader--hidden {
            opacity: 0;
            visibility: hidden;
        }

        .loader::after {
            content: "";
            width: 75px;
            height: 75px;
            border: 15px solid #dddddd;
            border-top-color: #009578;
            border-radius: 50%;
            animation: loading 0.75s ease infinite;
        }







        .titleproduct {
            color: #3f51b5;
            font-family: 'Philosopher', sans-serif;
            font-size: 26px;
            border-bottom: 0px solid;
            padding-bottom: 2px;
            font-size: 26px;
            transition: color 0.3s ease-in-out;
        }

        .brandproduct {
            color: #fd7e14;
            font-family: 'Philosopher', sans-serif;
            font-size: 18px;
            transition: color 0.3s ease-in-out;
        }



        .cardproduct:hover .desproduct {
            max-height: 100px;
        }

        .priceproduct h2 {
            color: darkcyan;
            font-family: 'Philosopher', sans-serif;
            font-size: 28px;
            transition: color 0.3s ease-in-out;
        }

        .btnwatch {
            background-color: #3f51b5;
            color: aliceblue;
            font-family: 'Philosopher', sans-serif;
            font-size: 14px;
            letter-spacing: 1px;
            transition: background-color 0.1s ease-in-out;
        }

            .btnwatch:hover {
                background-color: #fd7e14;
                color: #001bb0;
            }

        .detproduct {
            max-height: 0;
            overflow: hidden;
            color: darkcyan;
            font-family: 'Philosopher', sans-serif;
            font-size: 18px;
            transform: translateX(-20px);
            opacity: 0;
            transition: transform 0.5s ease-in-out, opacity 0.5s ease-in-out,max-height 0.5s ease-in-out;
            overflow: hidden;
        }

        .cardproduct:hover .detproduct {
            max-height: 100px;
        }





        .card {
            transition: transform 0.5s ease-in-out;
        }

            .card:hover {
                transform: scale(1.01);
                box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.2);
            }



                .card:hover .detproduct {
                    transform: translateX(0);
                    opacity: 1;
                }



        .desproduct {
            transform: translateX(20px);
